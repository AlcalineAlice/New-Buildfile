// 'seal <stat>' skills for the Skill System
// hack by ???

// TODO: more modular things

PUSH
	// TODO: figure out if we can do this better

	ORG $2C088
		jumpToHack(SealSkillsHook)
POP

SealSkillIdList:
	BYTE SealStrID SealSklID SealSpdID SealDefID SealResID SealLukID

